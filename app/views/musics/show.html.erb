<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="soundcloud">
        <%= @embed_info['html'].html_safe %>
    </div>
    <h1>Click play and tell us how do you like the song <%= @music.artist %></h1>
    <div class="button">
        <%= link_to "<i class='fa fa-heartbeat fa-lg'></i>Love IT!".html_safe, next_track_path(music: @music.id, status: 'love'),:class =>"btn btn-success btn-lg" %>
        <%= link_to "<i class='fa fa-times fa-lg'></i> Nah! Not my Kind".html_safe, next_track_path(music: @music.id, status: 'kind'),:class =>"btn btn-warning btn-lg" %>
        <%= link_to "<i class='fa fa-thumbs-up fa-lg'></i>I Like IT!".html_safe, next_track_path(music: @music.id, status: 'like'),:class =>"btn btn-info btn-lg" %>
        <%= link_to "<i class='fa fa-ambulance fa-lg'></i>This is Horrible!".html_safe, next_track_path(music: @music.id, status: 'hate'),:class =>"btn btn-danger btn-lg" %>
    </div>
  </div>
</div>
